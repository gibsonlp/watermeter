config wifi-device  radio0
	option type     mac80211
	option channel  6
	option hwmode	11g
	option path	'pci0000:00/0000:00:00.0'
	option htmode	HT20
	# REMOVE THIS LINE TO ENABLE WIFI:
	#option disabled 1

config wifi-iface
	option device   radio0
	option network  lan
	option mode     monitor
	option ssid     NONE
	option encryption none

